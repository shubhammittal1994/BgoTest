<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bango.bangoLive.fragments.MyLiveStream.MyLiveStreamFragment">
    <RelativeLayout
        android:id="@+id/toplay"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="3dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/backarrow"
            android:tint="?android:textColorPrimary"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Earning"
            android:textColor = "?android:textColorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="October,2022"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor = "?android:textColorPrimary"
                    android:textSize="14dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtMonthlyRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/monthly_earning_records"
                    android:textColor = "?android:textColorPrimary"
                    android:textSize="14dp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/circle"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="90dp"
                    android:layout_marginVertical="40dp"
                    android:src="@drawable/back_earning" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/circle"
                    android:layout_alignTop="@+id/circle"
                    android:layout_alignEnd="@+id/circle"
                    android:layout_alignBottom="@+id/circle"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/dimand"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/diamondicon" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Total Earning"
                        android:textColor = "?android:textColorPrimary"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:text="0"
                        android:textColor = "?android:textColorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/circle"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="20dp">

                    <RelativeLayout
                        android:id="@+id/rlTotalEarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_earnin">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/dimandRecord"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="5dp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="3dp"
                            android:src="@drawable/diamondicon" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/erningRecord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/dimandRecord"
                            android:text="0"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor = "?android:textColorPrimary"
                            android:textSize="10sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/erningRecord"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="5dp"
                            android:layout_toRightOf="@+id/dimandRecord"
                            android:singleLine="true"
                            android:text="Earning"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor = "?android:textColorPrimary"
                            android:textSize="10sp"

                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlTotalEarningTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_earnin">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/dimandRecord2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/clock" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/erningRecord2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/dimandRecord2"
                            android:text="0"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor = "?android:textColorPrimary"
                            android:textSize="10sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/erningRecord2"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_toRightOf="@+id/dimandRecord2"
                            android:singleLine="true"
                            android:text="Live Duration"
                            android:textColor = "?android:textColorPrimary"
                            android:textSize="10sp"

                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlTotalEarningDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_earnin">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/dimandRecord3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/clock" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/erningRecord3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@+id/dimandRecord3"
                            android:text="0"
                            android:textColor = "?android:textColorPrimary"
                            android:textSize="10sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/erningRecord3"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="5dp"
                            android:layout_toEndOf="@+id/dimandRecord3"
                            android:singleLine="true"
                            android:text="Valid Days"
                            android:textColor = "?android:textColorPrimary"
                            android:textSize="10sp" />
                    </RelativeLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlBaseSalary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/back_earnin">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20dp"
                    android:text="Base Salary"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor = "?android:textColorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_toLeftOf="@+id/zerroMinusBase"
                    android:src="@drawable/diamondicon"
                    android:textSize="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/zerroMinusBase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toLeftOf="@+id/arrowBase"
                    android:text="+0"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor = "?android:textColorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/arrowBase"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlBonuses"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/back_earnin">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Bonuses"
                    android:textColor = "?android:textColorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_toLeftOf="@+id/zerroMinus3"
                    android:src="@drawable/diamondicon"
                    android:textSize="15dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/zerroMinus3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toLeftOf="@+id/arrow"
                    android:fontFamily="@font/poppins_regular"
                    android:text="+0"
                    android:textColor = "?android:textColorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/arrow"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlExchange"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:background="@drawable/back_earnin">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Exchange"
                    android:textColor = "?android:textColorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_toLeftOf="@+id/zerroMinus"
                    android:src="@drawable/diamondicon"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/zerroMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toLeftOf="@+id/arrow1"
                    android:text="+0"
                    android:textColor = "?android:textColorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>