<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp">


    <LinearLayout
        android:id="@+id/linearR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/logoutdesign"
        android:elevation="10dp"
        android:paddingVertical="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/openSeatTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/black"
            android:text="Close seat"
            android:singleLine="true"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/sitOnSeatTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/black"
            android:text="sit"
            android:visibility="gone"
            android:layout_below="@+id/openSeatTv"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/micTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/black"
            android:text="Mute mic"
            android:visibility="gone"
            android:layout_below="@+id/openSeatTv"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/kickOutTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:text="Kick out"
            android:visibility="gone"
            android:layout_below="@+id/openSeatTv"
            android:singleLine="true"
           android:layout_marginHorizontal="20dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/ProfileTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:text="Profile"
            android:visibility="gone"
            android:layout_below="@+id/openSeatTv"
            android:singleLine="true"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/inviteAudienceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:text="Invite Audience"
            android:visibility="gone"
            android:layout_below="@+id/openSeatTv"
            android:singleLine="true"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="sans-serif-medium"/>


    </LinearLayout>



</LinearLayout>