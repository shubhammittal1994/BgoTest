<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/verificationbackground"
    tools:context="com.bango.bangoLive.loginCredentials.activities.fragments.Verification_Otp_Fragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backArrowIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/backarrow"/>
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in with phone number"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_medium"
            android:elevation="10dp"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/lighteditbackground">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/verficationCodeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_color"
                    android:hint="Fill in Verification code"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@null"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/lighteditbackground">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:hint="Fill in password"
                    android:textColorHint="@color/grey_color"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_toLeftOf="@+id/passwordShowIcon"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@null"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/passwordShowIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/passwordshowicon"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set 8~16 letter as a password"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_light"
            android:layout_marginStart="30dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_image">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_regular"
                android:shadowColor="#1E1E1E"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/checkBox"
            android:fontFamily="@font/poppins_regular"
            android:shadowColor="#1E1E1E"
            android:shadowDx="0.2"
            android:shadowDy="0.2"
            android:shadowRadius="0.2"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/by_using_bango_you_agree_to_the_bango_live_terms_of_services_and_privacy_policies"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@id/checkBox"
            android:fontFamily="@font/poppins_regular"
            android:shadowColor="#1E1E1E"
            android:gravity="center"
            android:shadowDx="0.2"
            android:shadowDy="0.2"
            android:shadowRadius="0.2"
            android:text="@string/bango_live_terms_of_services_and_privacy_policies"
            android:textColor="@color/black"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>