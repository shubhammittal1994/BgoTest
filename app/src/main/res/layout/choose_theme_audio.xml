<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/layoutCar"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="10dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardImage"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginTop="12dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_user_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/civ_user_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:riv_corner_radius="10dp"
                android:padding="5dp"
                android:src="@color/black" />

        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cardImage"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_toRightOf="@+id/cardImage"
            android:gravity="center_horizontal"
            android:hint="User"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="validation Period"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvOneWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/stroke_primary"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:text="1 Week"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/app_dark_color"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvTwoWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/stroke_week"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:text="2 Week"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvThreeWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/stroke_week"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:text="1 Month"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/txtByThemeStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/ripple_bg"
                android:backgroundTint="@color/app_dark_color"
                android:text="77777  coins"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>